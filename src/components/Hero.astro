<section class="relative min-h-[95vh] pt-32 pb-20 overflow-hidden bg-bg-primary flex items-end">
  
    <div class="container-custom relative z-10 w-full">
        <div class="grid grid-cols-1 lg:grid-cols-12 gap-12 items-end">
            
            <!-- Typography Heavy Left Side -->
            <div class="lg:col-span-7 pb-8 md:pb-16">
                <div class="inline-flex items-center gap-2 mb-8 border-l-2 border-brand-accent pl-4">
                    <span class="text-xs font-bold tracking-[0.2em] uppercase text-text-muted">Orchestrating Travel Commerce</span>
                </div>

                <h1 class="text-6xl md:text-8xl lg:text-[7rem] leading-[0.9] font-black text-brand-primary mb-8 tracking-tighter">
                   TRAVEL<br/>
                   COMMERCE<br/>
                   <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-secondary to-brand-accent">SIMPLIFIED.</span>
                </h1>

                <p class="text-xl md:text-2xl text-text-secondary font-light max-w-xl leading-relaxed mb-10 border-l border-gray-200 pl-6 ml-2">
                    A complete ecosystem for airlines, travel agents, and loyalty brands to build products without complexity.
                </p>

                <div class="flex flex-wrap gap-4 pl-2">
                    <a href="#solutions" class="btn-primary group">
                        <span>Explore Solutions</span>
                        <svg class="w-4 h-4 ml-2 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
                    </a>
                </div>
            </div>

            <!-- Visual Right Side - Breaking constraints -->
            <div class="lg:col-span-5 relative h-full min-h-[400px]">
                <div class="absolute right-[-20%] bottom-[-10%] w-[140%]">
                    <img 
                        src="/images/hero_visual.png" 
                        alt="Global Network" 
                        class="w-full h-auto object-contain drop-shadow-2xl opacity-90 mix-blend-multiplycontrast"
                    />
                </div>
                
                <!-- Floating Stats Card -->
                <div class="absolute bottom-10 left-0 bg-white/80 backdrop-blur-xl p-6 border border-white/40 shadow-2xl max-w-xs">
                    <div class="flex items-end gap-2 mb-1">
                        <span class="text-4xl font-black text-brand-primary">1M+</span>
                        <span class="text-sm font-bold text-text-muted mb-1.5 uppercase tracking-wider">Hotels</span>
                    </div>
                    <div class="h-1 w-full bg-gray-100 rounded-full overflow-hidden">
                        <div class="h-full bg-brand-accent w-[85%]"></div>
                    </div>
                </div>
            </div>

        </div>
    </div>

    <!-- Decorative Background lines -->
    <div class="absolute inset-0 z-0 opacity-[0.03] pointer-events-none" 
         style="background-image: linear-gradient(to right, #000 1px, transparent 1px), linear-gradient(to bottom, #000 1px, transparent 1px); background-size: 60px 60px;">
    </div>
</section>
