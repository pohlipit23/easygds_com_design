<section class="py-24 bg-bg-secondary relative" id="solutions">
    <div class="container-custom">
        <div class="flex flex-col gap-1">
            
            <!-- Airlines -->
            <div class="group relative bg-white border-b border-gray-200 overflow-hidden hover:bg-brand-primary transition-colors duration-500 cursor-pointer">
                <div class="p-8 md:p-12 flex flex-col md:flex-row items-start md:items-center justify-between gap-6 relative z-10">
                    <div class="flex items-center gap-6 md:gap-12">
                        <span class="text-xs font-mono text-gray-400 group-hover:text-white/40">01</span>
                        <h2 class="text-4xl md:text-5xl font-black text-brand-primary group-hover:text-white transition-colors uppercase tracking-tight">For Airlines</h2>
                    </div>
                    <div class="max-w-md opacity-60 group-hover:opacity-100 group-hover:text-white transition-opacity">
                        <p class="text-lg leading-relaxed">Power your airline holiday brand and own your direct customer relationship.</p>
                    </div>
                    <div class="w-12 h-12 rounded-full border border-gray-200 group-hover:border-white/20 flex items-center justify-center group-hover:bg-white group-hover:text-brand-primary transition-all">
                        <svg class="w-5 h-5 -rotate-45 group-hover:rotate-0 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
                    </div>
                </div>
            </div>

            <!-- Agents -->
            <div class="group relative bg-white border-b border-gray-200 overflow-hidden hover:bg-brand-secondary transition-colors duration-500 cursor-pointer">
                <div class="p-8 md:p-12 flex flex-col md:flex-row items-start md:items-center justify-between gap-6 relative z-10">
                    <div class="flex items-center gap-6 md:gap-12">
                        <span class="text-xs font-mono text-gray-400 group-hover:text-white/40">02</span>
                        <h2 class="text-4xl md:text-5xl font-black text-brand-primary group-hover:text-white transition-colors uppercase tracking-tight">Travel Agents</h2>
                    </div>
                    <div class="max-w-md opacity-60 group-hover:opacity-100 group-hover:text-white transition-opacity">
                        <p class="text-lg leading-relaxed">Access vast global inventory with transparent costs. Pay only for what you use.</p>
                    </div>
                     <div class="w-12 h-12 rounded-full border border-gray-200 group-hover:border-white/20 flex items-center justify-center group-hover:bg-white group-hover:text-brand-secondary transition-all">
                        <svg class="w-5 h-5 -rotate-45 group-hover:rotate-0 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
                    </div>
                </div>
            </div>

            <!-- Loyalty -->
            <div class="group relative bg-white border-b border-gray-200 overflow-hidden hover:bg-brand-primary transition-colors duration-500 cursor-pointer">
                <div class="p-8 md:p-12 flex flex-col md:flex-row items-start md:items-center justify-between gap-6 relative z-10">
                    <div class="flex items-center gap-6 md:gap-12">
                        <span class="text-xs font-mono text-gray-400 group-hover:text-white/40">03</span>
                        <h2 class="text-4xl md:text-5xl font-black text-brand-primary group-hover:text-white transition-colors uppercase tracking-tight">Loyalty & Retail</h2>
                    </div>
                    <div class="max-w-md opacity-60 group-hover:opacity-100 group-hover:text-white transition-opacity">
                        <p class="text-lg leading-relaxed">Launch your travel vertical without complexity. Maintain first-party ownership.</p>
                    </div>
                     <div class="w-12 h-12 rounded-full border border-gray-200 group-hover:border-white/20 flex items-center justify-center group-hover:bg-white group-hover:text-brand-primary transition-all">
                        <svg class="w-5 h-5 -rotate-45 group-hover:rotate-0 transition-transform duration-300" fill="currentColor" viewBox="0 0 24 24"><path d="M5 12h14M12 5l7 7-7 7"/></svg>
                    </div>
                </div>
            </div>

        </div>
    </div>
</section>
