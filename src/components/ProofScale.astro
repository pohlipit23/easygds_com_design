---
const stats = [
    { value: "1M+", label: "Hotels" },
    { value: "950+", label: "Carriers" },
    { value: "250k", label: "Activities" },
    { value: "650+", label: "Rentals" }
];
const partners = ["Etihad Airways", "Malaysia Airlines", "Amadeus", "NATAS"];
---
<section class="py-20 border-t border-brand-primary/10 bg-bg-surface">
    <!-- Marquee -->
    <div class="overflow-hidden whitespace-nowrap mb-20 opacity-50">
        <div class="inline-block animate-marquee">
            {partners.map(partner => (
                <span class="text-4xl md:text-6xl font-black text-transparent bg-clip-text bg-gradient-to-r from-gray-300 to-gray-400 mx-12 uppercase">
                    {partner}
                </span>
            ))}
             {partners.map(partner => (
                <span class="text-4xl md:text-6xl font-black text-transparent bg-clip-text bg-gradient-to-r from-gray-300 to-gray-400 mx-12 uppercase">
                    {partner}
                </span>
            ))}
        </div>
    </div>

    <!-- Stats Grid -->
    <div class="container-custom">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
            {stats.map((stat) => (
                <div class="border-l border-brand-primary/20 pl-6">
                    <div class="text-4xl md:text-5xl font-black text-brand-primary mb-1 tracking-tighter">{stat.value}</div>
                    <div class="text-xs font-bold uppercase tracking-widest text-text-muted">{stat.label}</div>
                </div>
            ))}
        </div>
    </div>
</section>

<style>
    .animate-marquee {
        animation: marquee 20s linear infinite;
    }
    @keyframes marquee {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
    }
</style>
